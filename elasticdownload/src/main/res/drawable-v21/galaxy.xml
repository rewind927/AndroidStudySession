                android:fillColor="#ff5656ea"
                android:pathData="m -10 0 a 10,10 0 1,0 20,0 a 10,10 0 1,0 -20,0" />
            <group
                android:translateX="25">
                <path
                    android:fillColor="#ffadadad"
                    android:pathData="m -5 0 a 5,5 0 1,0 10,0 a 5,5 0 1,0 -10,0" />
            </group>
        </group>
    </group>
