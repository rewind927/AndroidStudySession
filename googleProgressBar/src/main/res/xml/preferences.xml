<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
        android:defaultValue="@string/progressBar_pref_defValue"
        android:dialogTitle="ProgressBar drawable"
        android:entries="@array/progressDrawables"
        android:entryValues="@array/progressDrawablesValues"
        android:key="@string/progressBar_pref_key"
        android:summary="Add dynamically the selected value"
        android:title="ProgressBar type" />

    <PreferenceCategory android:title="@string/pref_colors_header_title">
        <com.jpardogo.android.googleprogressbar.calendarstock.ColorPickerPreference
            android:defaultValue="@color/red"
            android:key="@string/firstcolor_pref_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="First color"
            app:cal_itemLayout="@layout/calendar_grid_item_color"
            app:cal_numColumns="5" />
        <com.jpardogo.android.googleprogressbar.calendarstock.ColorPickerPreference
            android:defaultValue="@color/blue"
            android:key="@string/secondcolor_pref_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Second color"
            app:cal_itemLayout="@layout/calendar_grid_item_color"
            app:cal_numColumns="5" />
        <com.jpardogo.android.googleprogressbar.calendarstock.ColorPickerPreference
            android:defaultValue="@color/yellow"
            android:key="@string/thirdcolor_pref_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Third color"
            app:cal_itemLayout="@layout/calendar_grid_item_color"
            app:cal_numColumns="5" />
        <com.jpardogo.android.googleprogressbar.calendarstock.ColorPickerPreference
            android:defaultValue="@color/green"
            android:key="@string/fourthcolor_pref_key"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="Fourth color"
            app:cal_itemLayout="@layout/calendar_grid_item_color"
            app:cal_numColumns="5" />
    </PreferenceCategory>

</PreferenceScreen>